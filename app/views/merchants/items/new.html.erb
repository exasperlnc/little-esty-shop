<%= render 'shared/flash_messages' %>
<h2>Add New Item</h2>

<section id="new-item-form">
  <%= form_with url: merchant_items_path(@merchant), method: :post, local: true do |f| %>
    <%= f.label :name, "Item Name:" %>
    <%= f.text_field :name, required: true %>
    <br>
    <%= f.label :description, "Item Description:" %>
    <%= f.text_area :description, reqiore: true %>
    <br>
    <%= f.label :unit_price, "Unit Price:" %>
    <%= f.number_field :unit_price, placeholder: "Price in cents" , required: true %>
    <br>
    <%= f.submit "Submit" %>
  <% end %>
</section>>